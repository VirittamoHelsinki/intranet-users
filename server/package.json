{
  "name": "users-server",
  "author": "Veikko Laine",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "build:dev": "rm -rf build && cd ../client && npm run build && cp -r dist ../server/build",
    "build:prod": "rm -rf build && cd ../client && npm run build:prod && cp -r dist ../server/build"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "axios": "1.6.2",
    "bcrypt": "5.1.1",
    "config": "^3.3.9",
    "cors": "2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.0.1",
    "nanoid": "^5.0.3",
    "nodemailer": "6.9.7",
    "pino": "^8.16.2"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "pino-pretty": "^10.2.3",
    "supertest": "6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./tests/teardown.js"
  }
}
