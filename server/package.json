{
  "name": "users-server",
  "author": "Veikko Laine",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "nodemon index.js",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "build:dev": "rm -rf build && cd ../client && npm run build && cp -r dist ../server/build",
    "build:prod": "rm -rf build && cd ../client && npm run build:prod && cp -r dist ../server/build"
  },
  "dependencies": {
    "axios": "1.6.7",
    "bcrypt": "5.1.1",
    "cors": "2.8.5",
    "dayjs": "1.11.10",
    "dotenv": "16.4.5",
    "express": "4.18.3",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.2.1",
    "nodemailer": "6.9.11",
    "pino": "^8.19.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "pino-pretty": "^10.3.1",
    "supertest": "6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "globalTeardown": "./tests/teardown.js"
  }
}
